<html>
    <head>
        <meta charset="utf-8">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="max-w-3xl relative z-10 m-auto px-6 lg:mt-16">
            <div class="bg-gray-200 rounded-lg p-10 sm:m-auto md:m-auto lg:m-0 border border-gray-400">
                <img class="mx-auto h-24 w-auto rounded-full" src="/images/logo_rl_plein.jpg" alt="Workflow">
                <div class="sm:w-full text m-auto lg:m-0">
                    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Se connecter</h2>
                </div>
                <div class="w-full"> 
                    <form class="mt-8 space-y-6" action="/api/users/login" method="POST">
                        <input type="hidden" name="remember" value="true">
                        <div>
                            <label for="email" class="block text-sm font-medium leading-8 text-gray-700">Adresse email</label>
                            <div class="mt-2">
                                <input id="email" type="email" placeholder="Email" name="email" autofocus="" required="" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">                 
                            </div>
                        </div>    
                        <div>
                            <label for="password" class="block text-sm font-medium leading-8 text-gray-700">Mot de passe</label> 
                            <div class="mt-1 rounded-md">
                                <input id="password" type="password" placeholder="Mot de passe" name="password" required="" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                            </div>    
                        </div>

                        <div class="mt-2 flex flex-col md:flex-row justify-between">
                            <div class="flex items-center">
                                <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                                <label for="remember-me" class="ml-2 block text-sm text-gray-900">Se rappeler de moi</label>
                            </div>
                            <div class="text-sm leading-5 mt-4 md:mt-0">
                                <a class="text-blue-600" href="/users/register">Pas de compte</a>
                            </div>
                        </div>

                        <div class="mt-10">
                            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-teal-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-amber-400 group-hover:text-amber-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                                Se connecter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>

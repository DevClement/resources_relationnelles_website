<html>
    <head>
        <meta charset="utf-8">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <%- include('partials/header_connected'); %>            
        <div class="max-w-md space-y-10 mx-auto">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold">Création d'une ressource</h2>
            </div>
            <form class="mt-8 space-y-6" action="/resources/crea_resource" method="POST">
                <div>
                    <label for="title" class="block font-medium leading-8 text-gray-700">Titre :</label>
                    <input id="title" name="title" autocomplete="Titre" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                </div>
                <div>
                    <label for=categorie class="block font-medium leading-8 text-gray-700">Catégorie :</label>
                    <select id="categorie" name="categorie" placeholder="Sélectionner une catégorie" autocomplete="Veuillez choisir une catégorie" >
                        <option>--Sélectionner un type</option>
                        <% categories.forEach(function(categories){ %>
                         <option value="<%= categories.id_categorie %>"><%= categories.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <label for=type class="block font-medium leading-8 text-gray-700">Type :</label>
                    <select id="type" name="type" autocomplete="Veuillez choisir un type">
                        <option>--Sélectionner un type</option>
                        <% types.forEach(function(types){ %>
                        <option value="<%= types.id_resource_types%>"><%= types.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <label for=type_relation class="block font-medium leading-8 text-gray-700">Type relation :</label>
                    <select id="type_relation" name="type_relation" autocomplete="Veuillez choisir un type-relation">
                        <option>--Sélectionner un type relation--</option>
                        <% typesRelation.forEach(function(typesRelation){ %>
                        <option value="<%= typesRelation.id_relationships_types %>"><%= typesRelation.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <label for=language class="block font-medium leading-8 text-gray-700">Langue :</label>
                    <select id="language" name="language" autocomplete="Veuillez choisir une langue">
                        <option value="">--Sélectionner une langue--</option>
                        <% getAllLanguages.forEach(function(langues){ %>
                            <option><%= langues.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <label for="contenue" class="block font-medium leading-8 text-gray-700">Contenue :</label>
                    <textarea id="contenue" name="content" required class="resize-y w-full rounded-md border border-gray-300 focus:shadow-outline-blue focus:border-blue-300"></textarea>
                </div>
                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Valider
                    </button>
                </div>
            </form>
        </div>
    </body>
</html>
